<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="55dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:background="@drawable/chat_bubble_right"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="4dp"

        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent">


    <TextView
        android:id="@+id/conversation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins"
        android:text="Your Message"
        android:textColor="@color/th_black"
        android:textSize="@dimen/chatTextSize"
        android:textStyle="bold"

        android:includeFontPadding="false"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/conversationTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/th_black"
        android:textAppearance="@style/ShapeAppearance.Material3.Corner.ExtraSmall"
        android:fontFamily="@font/poppins"
        android:textStyle="bold"
        android:textSize="13sp"
        android:text="Chat Time"
        android:paddingHorizontal="6dp"
        android:paddingBottom="3dp"
        android:includeFontPadding="false"

        app:layout_constraintTop_toBottomOf="@id/conversation"
        app:layout_constraintEnd_toEndOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>